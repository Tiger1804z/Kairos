generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id_user       Int        @id @default(autoincrement())
  first_name    String     @db.VarChar(100)
  last_name     String     @db.VarChar(100)
  email         String     @unique @db.VarChar(255)
  password_hash String     @db.VarChar(255)
  role          UserRole   @default(owner)
  is_active     Boolean    @default(true)
  last_login_at DateTime?
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  businesses    Business[]
  documents     Document[]
  queries       QueryLog[]
  reports       Report[]

  @@index([email])
  @@map("users")
}

model Business {
  id_business   Int              @id @default(autoincrement())
  owner_id      Int
  name          String           @db.VarChar(255)
  business_type String?          @db.VarChar(50)
  city          String?          @db.VarChar(100)
  country       String?          @db.VarChar(100)
  currency      String           @default("CAD") @db.VarChar(3)
  timezone      String           @default("America/Montreal") @db.VarChar(50)
  created_at    DateTime         @default(now())
  updated_at    DateTime         @updatedAt
  is_active     Boolean          @default(true)
  owner         User             @relation(fields: [owner_id], references: [id_user], onDelete: Cascade)
  clients       Client[]
  documents     Document[]
  items         EngagementItem[]
  engagements   Engagement[]
  queries       QueryLog[]
  reports       Report[]
  transactions  Transaction[]

  @@index([owner_id])
  @@index([is_active])
  @@map("businesses")
}

model Client {
  id_client    Int           @id @default(autoincrement())
  business_id  Int
  first_name   String?       @db.VarChar(100)
  last_name    String?       @db.VarChar(100)
  company_name String?       @db.VarChar(200)
  email        String?       @db.VarChar(255)
  phone        String?       @db.VarChar(30)
  address      String?       @db.VarChar(255)
  city         String?       @db.VarChar(100)
  country      String?       @db.VarChar(100)
  postal_code  String?       @db.VarChar(20)
  notes        String?
  is_active    Boolean       @default(true)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  business     Business      @relation(fields: [business_id], references: [id_business], onDelete: Cascade)
  engagements  Engagement[]
  query_logs   QueryLog[]
  transactions Transaction[]

  @@index([business_id])
  @@index([email])
  @@map("clients")
}

/// =========================
///    DOCUMENTS
///    =========================
model Document {
  id_document  Int                @id @default(autoincrement())
  user_id      Int
  business_id  Int
  file_name    String             @db.VarChar(255)
  file_type    String?            @db.VarChar(50)
  file_size    Int?
  storage_path String             @db.VarChar(500)
  source_type  DocumentSourceType @default(upload)
  ai_summary   String?
  is_processed Boolean            @default(false)
  processed_at DateTime?
  visibility   DocumentVisibility @default(owner)
  created_at   DateTime           @default(now())
  updated_at   DateTime           @updatedAt
  business     Business           @relation(fields: [business_id], references: [id_business], onDelete: Cascade)
  user         User               @relation(fields: [user_id], references: [id_user], onDelete: Cascade)
  query_log    QueryLog[]

  @@index([business_id])
  @@index([user_id])
  @@index([is_processed])
  @@map("documents")
}

model Engagement {
  id_engagement Int              @id @default(autoincrement())
  business_id   Int
  client_id     Int?
  title         String           @db.VarChar(255)
  description   String?
  status        EngagementStatus @default(draft)
  start_date    DateTime?
  end_date      DateTime?
  total_amount  Decimal?         @db.Decimal(12, 2)
  created_at    DateTime         @default(now())
  updated_at    DateTime         @updatedAt
  items         EngagementItem[]
  business      Business         @relation(fields: [business_id], references: [id_business], onDelete: Cascade)
  client        Client?          @relation(fields: [client_id], references: [id_client])
  transactions  Transaction[]

  @@index([business_id])
  @@index([client_id])
  @@index([status])
  @@map("engagements")
}

model EngagementItem {
  id_item       Int                @id @default(autoincrement())
  engagement_id Int
  business_id   Int
  item_name     String             @db.VarChar(255)
  item_type     EngagementItemType
  quantity      Int
  unit_price    Decimal            @db.Decimal(12, 2)
  line_total    Decimal            @db.Decimal(12, 2)
  created_at    DateTime           @default(now())
  updated_at    DateTime           @updatedAt
  business      Business           @relation(fields: [business_id], references: [id_business], onDelete: Cascade)
  engagement    Engagement         @relation(fields: [engagement_id], references: [id_engagement], onDelete: Cascade)

  @@index([engagement_id])
  @@index([business_id])
  @@map("engagement_items")
}

model Transaction {
  id_transaction   Int             @id @default(autoincrement())
  business_id      Int
  client_id        Int?
  engagement_id    Int?
  transaction_type TransactionType
  category         String?         @db.VarChar(100)
  amount           Decimal         @db.Decimal(12, 2)
  payment_method   PaymentMethod?
  reference_number String?         @db.VarChar(100)
  description      String?
  transaction_date DateTime
  created_at       DateTime        @default(now())
  updated_at       DateTime        @updatedAt
  business         Business        @relation(fields: [business_id], references: [id_business], onDelete: Cascade)
  client           Client?         @relation(fields: [client_id], references: [id_client])
  engagement       Engagement?     @relation(fields: [engagement_id], references: [id_engagement])

  @@index([business_id])
  @@index([client_id])
  @@index([transaction_date])
  @@index([transaction_type])
  @@map("transactions")
}

model QueryLog {
  id_query          Int             @id @default(autoincrement())
  user_id           Int
  business_id       Int
  client_id         Int?
  document_id       Int?
  natural_query     String
  action_type       QueryActionType
  generated_sql     String?
  status            QueryStatus     @default(success)
  error_message     String?
  execution_time_ms Int?
  model_used        String?         @db.VarChar(50)
  tokens_used       Int?
  created_at        DateTime        @default(now())
  executed_at       DateTime?
  business          Business        @relation(fields: [business_id], references: [id_business], onDelete: Cascade)
  client            Client?         @relation(fields: [client_id], references: [id_client])
  document          Document?       @relation(fields: [document_id], references: [id_document])
  user              User            @relation(fields: [user_id], references: [id_user], onDelete: Cascade)
  reports           Report?

  @@index([business_id])
  @@index([user_id])
  @@index([created_at])
  @@index([status])
  @@map("query_logs")
}

model Report {
  id_report    Int        @id @default(autoincrement())
  user_id      Int
  business_id  Int
  query_id     Int?       @unique
  title        String     @db.VarChar(255)
  report_type  ReportType
  period_start DateTime?
  period_end   DateTime?
  content      String
  file_path    String?    @db.VarChar(500)
  is_favorite  Boolean    @default(false)
  created_at   DateTime   @default(now())
  business     Business   @relation(fields: [business_id], references: [id_business], onDelete: Cascade)
  query        QueryLog?  @relation(fields: [query_id], references: [id_query])
  user         User       @relation(fields: [user_id], references: [id_user], onDelete: Cascade)

  @@index([business_id])
  @@index([user_id])
  @@index([report_type])
  @@index([created_at])
  @@map("reports")
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

enum UserRole {
  owner
  admin
  employee
}

enum DocumentSourceType {
  upload
  generated
}

enum DocumentVisibility {
  owner
  admin
  all
}

enum EngagementStatus {
  draft
  active
  completed
  cancelled
}

enum EngagementItemType {
  product
  service
  hourly
  subscription
}

enum TransactionType {
  income
  expense
}

enum PaymentMethod {
  cash
  card
  transfer
  check
  other
}

enum QueryActionType {
  sql_select
  sql_aggregate
  summary
  financial_report
  inventory
  other
}

enum QueryStatus {
  success
  error
  blocked
}

enum ReportType {
  financial
  inventory
  sales
  summary
  custom
}
